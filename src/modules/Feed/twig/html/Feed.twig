{% extends "html/module.twig" %}

{% block title %}
<div class="btn-group header-buttons">
</div>
{{parent()}}
{% endblock %}
{% block content %}
<div class="feed-content" id="{{module.id}}-content" data-id="{{module.id}}">
</div>

<div class="modal hide feed-list" id="feed-list-{{module.id}}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Configure: {{module.title}}</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <input type="hidden" name="id" value="{{module.id}}" />
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Url</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <input type="text" class="input-small" name="name" placeholder="Name" />
                        </td>
                        <td>
                            <input type="text" class="input-xlarge" name="url" placeholder="Feed URL" />
                        </td>
                        <td>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-mini">
                                <i class="icon-plus"></i>
                            </button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
    </div>
</div>
{% endblock %}
